<Page x:Class="Maths_Quiz_App.Quiz.pgQuestions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Maths_Quiz_App.Quiz"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="pgQuestions">

    <StackPanel Margin="30 10 30 10">
        <StackPanel.Background>
            <ImageBrush ImageSource="..\pinkbackground.jpg" Stretch="UniformToFill"/>
        </StackPanel.Background>
        <Label Content="Quiz" Margin="0 0 0 10" FontSize="16" HorizontalAlignment="Center" FontWeight="Bold" />
        <Label Name="lblTimer" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Center" />
        
        <Label Content="Equation:" />
        <Label x:Name="lblEquation" FontSize="26"  Margin="0 0 0 5" />

        <Label Content="Answer:" Margin="0 5 0 0" />
        <TextBox x:Name="textBoxUserAnswer" Margin="0 0 0 10" />
        <Button x:Name="btnNext" Content="Next" Margin="0 0 0 0" FontSize="16" Click="btnNext_Click" />

        <!-- 
        <TextBox x:Name="textBox1" />
        <TextBox x:Name="textBox2" />
        <TextBox x:Name="textBox3" />
        <TextBox x:Name="textBox4" />
        <TextBox x:Name="textBox5" />
        -->
    </StackPanel>
</Page>
