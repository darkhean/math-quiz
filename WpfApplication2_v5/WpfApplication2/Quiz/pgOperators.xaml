<Page x:Class="Maths_Quiz_App.Quiz.pgOperators"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Maths_Quiz_App.Quiz"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="pgOperators" Height="400" Width="525">

    <StackPanel Margin="30 10 30 10">
        <StackPanel.Background>
            <ImageBrush ImageSource="..\pinkbackground.jpg" Stretch="UniformToFill"/>
        </StackPanel.Background>
        <Label Content="Operators" Margin="0 0 0 10" FontSize="16" HorizontalAlignment="Center" FontWeight="Bold" />
        <Button x:Name="btnAdd" Content="Addition" Margin="0 0 0 10" FontSize="16" Click="btnAdd_Click" />
        <Button x:Name="btnSub" Content="Subtraction" Margin="0 10 0 10" FontSize="16" Click="btnSub_Click" />
        <Button x:Name="btnMul" Content="Multiplication" Margin="0 10 0 10" FontSize="16" Click="btnMul_Click" />
        <Button x:Name="btnDiv" Content="Division" Margin="0 10 0 10" FontSize="16" Click="btnDiv_Click" />

        <!--
        <TextBox x:Name="textBox1" />
        -->
    </StackPanel>
</Page>
